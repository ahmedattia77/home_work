<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    >

    <TextView
        android:id="@+id/coming_soon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/coming_soon"
        android:textSize="36sp"
        android:textColor="#0D0E0F"
        android:layout_marginTop="91dp"
        android:layout_marginStart="84dp"
        android:layout_marginEnd="83dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/union"
        app:layout_constraintTop_toBottomOf="@+id/coming_soon"
        app:layout_constraintStart_toStartOf="@+id/coming_soon"
        app:layout_constraintEnd_toEndOf="@+id/coming_soon"
        android:layout_marginTop="76dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="99.4dp"
        app:layout_constraintTop_toBottomOf="@+id/image"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="43dp"
        android:text="@string/refresh"
        android:textColor="@color/white"
        android:background="@drawable/rounded_background_bt"
        />

</androidx.constraintlayout.widget.ConstraintLayout>